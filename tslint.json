{
  "rules": {
    "class-name": true,
    "curly": false,
    "forin": true,
    "indent": [true, 4],
    "label-position": true,
    "max-line-length": [true, 255],
    "no-arg": true,
    "no-bitwise": false,
    "no-console": false,
    "no-construct": true,
    "no-debugger": true,
    "no-empty": true,
    "no-eval": true,
    "no-string-literal": false,
    "no-trailing-whitespace": true,
    "one-line": [true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "quotemark": [true, "single"],
    "radix": true,
    "semicolon": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true,
      "callSignature",
      "parameter",
      "propertySignature",
      "variableDeclarator"
    ],
    "variable-name": false,
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}